---
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Java from "./icons/Java.astro"
import SpringBoot from "./icons/SpringBoot.astro"
import React from "./icons/React.astro"

const TAGS = {
  SPRING: {
    name: "Spring Boot",
    class: "bg-[#6DB33F] text-white",
    icon: SpringBoot,
  },
  REACT: {
    name: "React",
    class: "bg-[#61DAFB] text-black",
    icon: React,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "English Learning Platform",
    description:
      "Plataforma completa para el estudio del inglés desarrollada con Spring Boot y React. Incluye módulos de teoría gramatical, ejercicios prácticos de vocabulario y gramática, y simuladores de exámenes Cambridge (FCE, CAE, CPE). Con seguimiento de progreso personalizado.",
    link: "https://english-learning-platform.com",
    github: "https://github.com/tuusuario/english-platform",
    image: "/projects/ingles.png",
    tags: [TAGS.SPRING, TAGS.REACT],
  },
]
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
        {title}
      </h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        src={image}
        alt={`Captura de pantalla de ${title}`}
      />
    </article>
  ))
}
